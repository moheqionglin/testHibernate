create database testHibernate;
CREATE TABLE hibernate_class(
    id INT NOT NULL AUTO_INCREMENT  COMMENT '主键',
    class_name VARCHAR(50) NOT NULL COMMENT '班级名字',
    createdAt TIMESTAMP  NOT NULL DEFAULT '0000-00-00 00:00:00' COMMENT '创建时间',
    updatedAt TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP  COMMENT '创建时间',
    version INT NOT NULL DEFAULT 0  COMMENT '版本',
    PRIMARY KEY(id)
  );
CREATE TABLE hibernate_student_meta(
  id INT NOT NULL AUTO_INCREMENT  COMMENT '主键',
  name VARCHAR(50) NOT NULL COMMENT '名字',
  sex VARCHAR(10)  NOT NULL COMMENT '',
  createdAt TIMESTAMP  NOT NULL DEFAULT '0000-00-00 00:00:00' COMMENT '创建时间',
  updatedAt TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP  COMMENT '创建时间',
  version INT NOT NULL DEFAULT 0  COMMENT '版本',
  PRIMARY KEY(id)
);
CREATE TABLE hibernate_student_detail(
  id INT NOT NULL AUTO_INCREMENT  COMMENT '主键',
  image VARCHAR(100) NOT NULL ,
  createdAt TIMESTAMP  NOT NULL DEFAULT '0000-00-00 00:00:00' COMMENT '创建时间',
  updatedAt TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP  COMMENT '创建时间',
  version INT NOT NULL DEFAULT 0  COMMENT '版本',
  PRIMARY KEY(id)
);